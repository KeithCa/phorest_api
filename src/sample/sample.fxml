<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="780.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <stylesheets>
        <URL value="@OverallStyle.css" />
    </stylesheets>
    <children>
        <Label layoutX="280.0" layoutY="49.0" text="Phorest Clients" textFill="blue">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
        <GridPane layoutX="270.0" layoutY="117.0" prefHeight="315.0" prefWidth="268.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextField fx:id="searchField"  />
                <ChoiceBox fx:id="choices" prefHeight="25.0" prefWidth="268.0" GridPane.rowIndex="1" value="Phone Number">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Email"/>
                            <String fx:value="Phone Number" />
                        </FXCollections>
                    </items>
                </ChoiceBox>
                <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="25.0" prefWidth="268.0" text="Search" GridPane.rowIndex="2" />
                <Label fx:id="info" text="" GridPane.columnIndex="0" prefHeight = "200" prefWidth = "268"
                        GridPane.columnSpan="10" GridPane.rowSpan="10" GridPane.rowIndex="3"/>
            </children>
        </GridPane>
    </children>
